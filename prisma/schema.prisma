// Enums remain the same
enum InvoiceStatus {
  PENDING
  CREATED
  PAID
  PARTIAL
  FAILED
  REFUNDED
  VOID
}

enum SubStatus {
  active
  past_due
  unpaid
  canceled
  incomplete
  incomplete_expired
  trialing
}

enum BillingCycle {
  MONTHLY
  QUARTERLY
  SEMIANNUAL
  ANNUAL
}
